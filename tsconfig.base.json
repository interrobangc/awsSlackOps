{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022"]
  },
  "include": ["src/**/*.ts"]
}
